{
  "manifest_version": 3,
  "name": "Browser Pet Companion",
  "version": "1.0.1",
  "description": "A cozy AI-generated pet companion that helps you manage tabs and keeps a Nest Archive. Uses multiple AI services for reliable pet generation.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://image.pollinations.ai/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/pet-default-16.png",
      "32": "icons/pet-default-32.png",
      "48": "icons/pet-default-48.png",
      "128": "icons/pet-default-128.png"
    }
  },
  "icons": {
    "16": "icons/pet-default-16.png",
    "32": "icons/pet-default-32.png",
    "48": "icons/pet-default-48.png",
    "128": "icons/pet-default-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "pet-icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

